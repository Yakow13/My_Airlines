<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="airline"
            type="com.doubleyu.myairlines.model.Airline" />

        <variable
            name="activity"
            type="com.doubleyu.myairlines.activity.AirlineDetailActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/airline_detail_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:contentDescription="@string/airline_logo"
                android:minWidth="80dp"
                android:minHeight="80dp"
                app:imageUrl="@{airline.logoURL}"
                tools:src="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/airline_detail_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:minWidth="30dp"
                android:minHeight="30dp"
                android:onClick="@{(view) -> activity.onFavoriteClick()}"
                android:src="@{activity.isAirlineFavorite ? @drawable/ic_baseline_star : @drawable/ic_baseline_star_border}"
                tools:src="@drawable/ic_baseline_star_border" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/airline_detail_text_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/airline_detail_name"
                style="@style/AirlineDetailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:text="@{airline.defaultName}"
                tools:text="Slovensky narodny prepravca" />

            <TextView
                android:id="@+id/airline_detail_phone_number"
                style="@style/AirlineDetailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:text="@{airline.phone}"
                tools:text="+421 123 456 789" />

            <TextView
                android:id="@+id/airline_detail_web_address"
                style="@style/AirlineDetailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:text="@{airline.site}"
                tools:text="www.snp.sk" />

            <Button
                android:id="@+id/airline_detail_web_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="@{!airline.site.empty}"
                android:onClick="@{(view) -> activity.openWebpageInExternalBrowser(airline.site)}"
                android:text="@string/web" />
        </LinearLayout>
    </LinearLayout>
</layout>